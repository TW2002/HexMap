<Window x:Class="TwvmApp.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwvmApp"
        xmlns:uc="clr-namespace:TwvmLib.Controls;assembly=TwvmLib"
        mc:Ignorable="d"
        Title="TradeWars Visual Map" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <GridSplitter Height="10" Background="red"  
                      VerticalAlignment="Bottom"
                      HorizontalAlignment="Stretch"
                      ResizeDirection="Rows"
                      ShowsPreview="True"/>
        <uc:SectorMap Name="SectorMap"
                      Visibility ="Hidden" />

        <StackPanel Name ="TopNav"
                    Orientation="Horizontal"
                    HorizontalAlignment ="Left"
                    VerticalAlignment="Top"
                    Height="23" Margin ="10">
            <ComboBox Name="Database"
                      Width="200" 
                      Focusable="False"
                      />
            <Button Name="Connect" 
                    Width="75"
                    Margin ="10,0,0,0"
                    Click="OnConnectClick"
                    Focusable="False"
                    Content ="Connect" />
            <Button Name="NewDB" 
                    Width="75"
                    Margin ="10,0,0,0"
                    Focusable="False"
                    Content ="New" />

        </StackPanel>

            
            <StackPanel Name ="BottomNav"
                    Orientation="Horizontal"
                    HorizontalAlignment ="Stretch"
                    VerticalAlignment="Bottom"
                    Height="23" Margin ="20">
            <ComboBox Name="MapMode"
                      Width="100" 
                      Focusable="False"
                      SelectionChanged="MapModeChanged"/>
                    <ComboBox Name="ClassZero"
                      Width="200" 
                      Focusable="False"
                      Visibility="Collapsed"
                      />
                 <ComboBox Name="NavPoint"
                      Width="100" 
                      Focusable="False"
                      Visibility="Collapsed"
                      />
                    <ComboBox Name="Trader"
                      Width="200" 
                      Focusable="False"
                      Visibility="Collapsed"
                     />

            <TextBox  Name="TargetSector" 
                    Width="75" Height="23"
                    Margin ="10,0,0,0"
                    Focusable="False"
                    TextAlignment="Center"  
                    Text = "Unknown" />

        </StackPanel>

        <uc:Scanner Name="Scanner"
                    Margin="5"
                    Grid.Row="1" />
    </Grid>
</Window>
